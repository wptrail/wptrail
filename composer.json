{
    "name": "wptrail/wptrail",
    "type": "wordpress-plugin",
    "description": "Error handling for WordPress",
    "keywords": [
        "wordpress",
        "error",
        "exception",
        "throwable",
        "debugging"
    ],
    "homepage": "https://github.com/wptrail/wptrail",
    "license": "MIT",
    "authors": [
        {
            "name": "Evgenii Nasyrov",
            "email": "inasyrov@ya.ru",
            "homepage": "https://github.com/nasyrov",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
        "php-stubs/wordpress-stubs": "^5.8",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.9"
    },
    "autoload": {
        "psr-4": {
            "WPTrail\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WPTrail\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs",
        "analyse": "vendor/bin/psalm"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
